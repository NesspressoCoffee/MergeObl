<div class="tablaVuelo">
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Numero</th>
                <th>Salida</th>
                <th>Llegada</th>
                <th>Horas</th>
                <th>Origen</th>
                <th>Destino</th>
                <th>Tipo</th>
                <th>Avion</th>
                <th>Visa</th>
                <th>Estado</th>
            </tr>
        </thead>
        <tbody id="tablaCategoria">
            @if (ViewBag.colVuelo != null)
            {
                foreach (var item in ViewBag.colVuelo)
                {
                    <tr class="datos">
                        <td>@item.idVuelo</td>
                        <td>@item.numeroVuelo</td>
                        <td>@item.fechaSalida</td>
                        <td>@item.fechaLlegada</td>
                        <td>@item.horasVuelo</td>
                        <td>@item.origen</td>
                        <td>@item.destino</td>
                        <td>@item.tipo</td>
                        <td>@item.avionId</td>
                        <td>@item.visa</td>
                        <td>@item.estado</td>
                        @if (item.estado == "Programado")
                        {
                            <td>@Html.ActionLink("EDITAR", "modifyVuelo", new { idVuelo = @item.idVuelo })</td>
                            <td>@Html.ActionLink("CANCELAR", "deleteVuelo", new { idVuelo = @item.idVuelo })</td>
                        }
                    </tr>
                }
            }


        </tbody>
    </table>
</div>

